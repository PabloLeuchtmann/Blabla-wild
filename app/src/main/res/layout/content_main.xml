<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.wcs.blablawild.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button_itinerary"
        android:layout_width="182dp"
        android:layout_height="61dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="104dp"
        android:text="Search an Itinerary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="100dp" />

    <Button
        android:id="@+id/buttonVehicle"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="104dp"
        android:text="Choose Vehicle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_itinerary"
        app:layout_constraintVertical_bias="0.048" />
</android.support.constraint.ConstraintLayout>
